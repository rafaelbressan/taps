# Development Environment Configuration
# Do not commit this file - it's a template

NODE_ENV=development

# Server Configuration
PORT=3000
API_PREFIX=api/v1

# Database Configuration
DATABASE_URL="postgresql://taps_dev:devpassword@localhost:5432/taps_dev?schema=public"

# JWT Configuration
JWT_SECRET=dev-jwt-secret-change-in-production
JWT_EXPIRES_IN=7d

# Tezos Configuration
TEZOS_RPC_URL=https://rpc.tzkt.io/ghostnet
TEZOS_FALLBACK_RPC_URL=https://ghostnet.ecadinfra.com
TEZOS_NETWORK=ghostnet

# TzKT API Configuration
TZKT_API_URL=https://api.ghostnet.tzkt.io

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=pretty

# Monitoring & Metrics
ENABLE_METRICS=true
METRICS_PORT=9090

# Sentry Configuration (optional in dev)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1

# BullMQ Configuration (Redis)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Job Scheduler Configuration
CYCLE_CHECK_INTERVAL=600000  # 10 minutes
BALANCE_POLL_INTERVAL=300000  # 5 minutes

# Rate Limiting
RATE_LIMIT_TTL=60000  # 1 minute
RATE_LIMIT_MAX=100  # 100 requests per minute

# CORS Configuration
CORS_ORIGIN=http://localhost:3001,http://localhost:4200
CORS_CREDENTIALS=true

# Wallet Encryption
WALLET_ENCRYPTION_KEY=dev-encryption-key-32-chars-min
WALLET_ENCRYPTION_IV=dev-iv-16chars

# Feature Flags
ENABLE_SWAGGER=true
ENABLE_GRAPHQL=false
ENABLE_WEBHOOKS=false

# Development Tools
ENABLE_DEBUG_ROUTES=true
ENABLE_PROFILER=true
